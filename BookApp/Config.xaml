<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookApp.ConfigPage"
             Title="ConfigPage">
    
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Text Files Path" />
        <Entry x:Name="TextFilesPathEntry" Placeholder="Select folder for text files" IsReadOnly="True" />
        <Button Text="Choose Text Path" Clicked="OnTextFilesPathClicked" />

        <Label Text="Sound Files Path" />
        <Entry x:Name="SoundFilesPathEntry" Placeholder="Select folder for sound files" IsReadOnly="True" />
        <Button Text="Choose Sound Path" Clicked="OnSoundFilesPathClicked" />

        <Label Text="ePub Default Path" />
        <Entry x:Name="EpubDefaultPathEntry" Placeholder="Select folder for ePub files" IsReadOnly="True" />
        <Button Text="Choose ePub Path" Clicked="OnEpubPathClicked" />

        <Button Text="Save Configuration" Clicked="OnSaveConfigClicked" BackgroundColor="Green" TextColor="White" />
    </VerticalStackLayout>
</ContentPage>